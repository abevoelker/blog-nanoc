source 'http://rubygems.org'

gem "thin", "~> 1.2.11" # nanoc auto/view -H thin
gem "mime-types", "~> 1.16"

group :development do
  gem "nanoc", "~> 3.2.2"
  gem "haml", "~> 3.1.3"
  gem "nokogiri", "~> 1.5.0"

  # Markdown parser
  gem "kramdown", "~> 0.13.3"

  # Static file server (for `nanoc view`)
  gem "adsf", "~> 1.0.1"
  
  # CSS stuff
  gem "less", "~> 2.0.5"
  gem "rainpress", "~> 1.0"
  gem "sass", "~> 3.1.10"

  # Used for syntax highlighting (calling pygmentize)
  gem "systemu", "~> 2.4.0"

  gem "heroku"
end
